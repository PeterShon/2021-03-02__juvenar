header.header.js_lock-padding
  .header__container.container
    .header__inner.inner
      a.header__logo(href="#/?utm_source=istochnik&utm_medium=organic&utm_campaign=test_of_utm")
        img.header__logo-img(src="./img/logo.png", alt="logo")
      .header__lang
        select#header__lang-select.header__lang-select.selecter(name="select")
          option(value="RU")
          option(value="KZ")
          option(value="EN")
      nav.header__nav
        ul.header__nav-list
          - var links = [['#', 'Состав'], ['#', 'Отзывы'], ['#', 'Доставка и оплата'], ['#', 'Вопросы—ответы'], ['#', 'Контакты']]
          each val, index in links
            li
              a(href = val[0])= val[1]
      .header__widgets
        a.header__whatsapp(href="https://wa.me/380951580858")  + 380 95 158 0858
        a.header__button.button(href="#") Заказать комплекс
        .header__burger.burger
          .burger__button-wrapper
            .burger__button
              .burger__button-el.burger__button-el_top
              .burger__button-el.burger__button-el_middle
              .burger__button-el.burger__button-el_bottom
          .burger__body
            .burger__container.container
              .burger__inner.inner
                nav.burger__nav
                  ul.burger__nav-list
                    - var links = [['#', 'Основные элементы'], ['#', 'Слайдер'], ['#', 'Табы'], ['#', 'Галерея'], ['#', 'Форма'], ['#', 'Чекпоинты']]
                    each val, index in links
                      li
                        a(href = val[0])= val[1]